
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jquery")

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/angularjs")
    @Scripts.Render("~/bundles/webshop")
   

</head>
<body>
    <!----container---->
    <div class="container">
        <!----top-header---->
        <div class="top-header">
            <div class="logo">
                <a href="@Url.Action("Index", "Home")">
                    <img src="~/Content/images/logo.png" title="webshopLogo" alt="your logo here" />
                </a>
            </div>
            <div class="top-header-info">
                <div class="top-contact-info">
                    <ul class="unstyled-list list-inline">
                        <li><span class="phone"> </span>0471 50 46 87</li>
                        <li><span class="mail"> </span><a href="mailto:info@sailaway.eu?Subject=webshop%20feedback">info@sailaway.eu</a></li>
                        <div class="clearfix"> </div>
                    </ul>
                </div>
                <div class="top-user-section">
                    @*@html.partial("_cartsummarypartial")*@
                    @{Html.RenderAction("CartSummary", "Cart");}
                    @Html.Partial("_LoginPartial")
                    <div class="clearfix"> </div>
                </div>
            </div>
            <div class="clearfix"> </div>
        </div>
        <!----//top-header---->
        <!---top-header-nav---->
        <div class="navbar main-menu top-nav">
            <div class="navbar-header">
                <img src="~/Content/images/nav-icon.png" alt="nav icon" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" height="40" width="40"/>
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Products", "Products", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                    @if (Request.IsAuthenticated && User.IsInRole("ShopAdmin"))
                    {
                        <li class="dropdown">
                            <a href="@Url.Action("Index", "Products")#" class="dropdown-toggle" data-toggle="dropdown">Shop Managment <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Products", "Index", "Products")</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Categories", "Index", "Categories")</li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <!--//top-header-nav---->
    <!---image slideshow---->
    <div id="myCarousel" class="container carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/Content/images/slide1.jpg" alt="offshore sailing">
                <div class="carousel-caption">
                    <h3>Offshore Sailing</h3>
                    <p>Alles voor extreme offshore sailing</p>
                </div>
            </div>

            <div class="item">
                <img src="~/Content/images/slide2.jpg" alt="zeilhorloges">
                <div class="carousel-caption">
                    <h3>Zeilhorloges</h3>
                    <p>En andere onmisbare items voor een wedstrijdzeiler</p>
                </div>
            </div>

            <div class="item">
                <img src="~/Content/images/slide3.jpg" alt="zwemvesten">
                <div class="carousel-caption">
                    <h3>Zwemvesten</h3>
                    <p>Veiligheid boven alles!</p>
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <!----- //End-image slideshow---->

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-muted pull-left">&copy; @DateTime.Now.Year - Sam Van den Bossche</p>
        </footer>
    </div>

   
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
